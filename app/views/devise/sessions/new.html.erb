
<div class="movie-form-page-container">
  <div class="movie-form-content-wrapper">
    <h1 class="page-title">Acesse Sua Conta</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "movie-form" }) do |f| %>

      <div class="field-group">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="field-group">
        <%= f.label :password, "Senha:", class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field-group checkbox-item-container">
          <%= f.check_box :remember_me, class: "genre-checkbox" %>
          <%= f.label :remember_me, "Lembrar de mim", class: "genre-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Entrar", class: "submit-button" %>
      </div>
    <% end %>

    <div class="back-link-container additional-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>