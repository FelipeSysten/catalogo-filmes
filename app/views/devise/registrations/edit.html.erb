<div class="movie-form-page-container">
  <div class="movie-form-content-wrapper">
    <h1 class="page-title"><%= t('devise.title_edit') %></h1>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "movie-form" }) do |f| %>

      <div class="field-group">
        <%= f.label :email, "E-mail", class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert-info">
          Atualmente aguardando confirmação para: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="field-group">
        <%= f.label :password, t('devise.password'), class: "form-label" %> <i class="hint-text">(<%= t('devise.leave_blank') %>)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
        <% if @minimum_password_length %>
          <small class="hint-text"><%= @minimum_password_length %> <%= t('devise.caracteres') %></small>
        <% end %>
      </div>

      <div class="field-group">
        <%= f.label :password_confirmation, t('devise.confirmed_password'), class: "form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="field-group">
        <%= f.label :current_password, t('devise.current_password'), class: "form-label" %> <i class="hint-text">( <%= t('devise.confirm_changes') %> )</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <div class="actions">
        <%= f.submit t('devise.update'), class: "submit-button" %>
      </div>
    <% end %>

    <div class="back-link-container additional-links">
      <div class="cancel-account-section">
        <h3><%= t('devise.cancel') %></h3>
        <p>Insatisfeito(a)? <%= button_to t('devise.delete'), registration_path(resource_name), data: { confirm: "Tem certeza?", turbo_confirm: "Tem certeza?" }, method: :delete, class: "danger-button" %></p>
      </div>

      <%= link_to t('devise.back'), :back, class: "back-button" %>
    </div>
  </div>
</div>