
<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(movie.errors.count, "erro") %> impediu este filme de ser salvo:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Título", style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :synopsis, "Sinopse", style: "display: block" %>
    <%= form.text_area :synopsis %>
  </div>

  <div>
    <%= form.label :release_year, "Ano de Lançamento", style: "display: block" %>
    <%= form.number_field :release_year %>
  </div>

  <div>
    <%= form.label :duration, "Duração (minutos)", style: "display: block" %>
    <%= form.number_field :duration %>
  </div>

  <div>
    <%= form.label :director, "Diretor", style: "display: block" %>
    <%= form.text_field :director %>
  </div>

  <div>
    <%= form.submit "Salvar Filme" %>
  </div>
<% end %>